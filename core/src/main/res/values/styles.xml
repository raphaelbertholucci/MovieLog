<resources>

    <style name="TextLogo">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/ostrich_heavy</item>
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/medium_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextTitle.Big">
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="TextDialogTitle">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextDescription.Green">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescription.Gray">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textColor">@color/colorGrayLight</item>
    </style>

    <style name="TextDescriptionLight">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textColor">@color/colorGrayLight</item>
    </style>
</resources>