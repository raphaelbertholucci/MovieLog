<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieLog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorBlack</item>
        <item name="colorControlHighlight">@color/colorGray</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextLogo">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="fontFamily">@font/ostrich_heavy</item>
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">@dimen/medium_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextTitle.Big">
        <item name="android:textSize">@dimen/font_title</item>
    </style>

    <style name="TextDialogTitle">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:textSize">@dimen/normal_title</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextDescription.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescription.Green">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDescription.Gray">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textColor">@color/colorGrayLight</item>
    </style>

    <style name="TextDescriptionLight">
        <item name="android:textSize">@dimen/default_title</item>
        <item name="android:textColor">@color/colorGrayLight</item>
    </style>

    <style name="TextInfo">
        <item name="android:textSize">@dimen/small_title</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextInfo.Gray">
        <item name="android:textColor">@color/colorGrayLight</item>
    </style>
</resources>